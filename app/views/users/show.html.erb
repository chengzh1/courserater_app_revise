<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
  <%= render 'follow_form' if signed_in? %>
    <% if @user.raters.any? %>
      <h3>Raters (<%= @user.raters.count %>)</h3>
      <ol class="raters">
        <%= render @raters %>
      </ol>
      <%= will_paginate @raters %>
    <% end %>
  </div>
</div>