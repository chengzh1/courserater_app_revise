<%= form_for(@rater) do |f| %>
  <% if @rater.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rater.errors.count, "error") %> prohibited this rater from being saved:</h2>

      <ul>
      <% @rater.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
   <p style = "color:red;font-size:18px">
   Course's ID<%=link_to "(See here)", courses_path%>
   </p>
    <%= f.number_field :course_id %>
  </div>
  
  <div class="field">
  <p style = "color:red;font-size:18px">
    <%= f.label :question1 %>Rate the quality of the course(points 1-10)
    </p>
    <%= f.number_field :question1 %>
  </div>
  <div class="field">
  <p style = "color:red;font-size:18px">
    <%= f.label :question2 %>Give a point to the course's teacher based on how much you like him/her(points 1-10)
    </p>
    <%= f.number_field :question2 %>
  </div>
  <div class="field">
  <p style = "color:red;font-size:18px">
    <%= f.label :questiong3 %>Based on how difficult the course is, give your point(1 means too easy while 10 means too difficult)
    </p>
    <%= f.number_field :questiong3 %>
  </div>

<div class="field">
  <p style = "color:red;font-size:18px">
    Any other comment?
  </p>
    <%= f.text_area :question4 %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
