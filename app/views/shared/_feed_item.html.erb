<%if !Course.where(id: (feed_item.course_id)).empty? %>
<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <ul>
    <span class="Course">
    <p style="font-family:arial;font-size:18px; color:red">
    Course's name:
    <%= link_to Course.find(feed_item.course_id).name,  feed_item.course%>
    </p>
    </span>
 </ul>
 <ul>
    <span class="Course id">
    <p style="font-family:arial;font-size:18px; color:red">
    Course's ID:<%= feed_item.course_id%>
    </p>
    </span>
 </ul>
  <ul>
    <span class="user">
    <p style="font-family:arial;font-size:18px; color:red">
